PATH=/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/snap/bin:~/.sh/bin
SUDO=$([[ $(id -u) -gt 0 ]] && echo 'sudo ')
VHOST=$(hostname -f|tr 'A-Z' 'a-z')
MAILTO=admin@$VHOST
EDITOR=nano

# Let's try these here, may not be needed
TERM=linux
DEBIAN_FRONTEND=readline

COLOR=31
LABEL=$(id -un)@${VHOST/%\.*/}

# Global static shell variables
export ADMIN='sysadm'
export ANAME='System Administrator'
export A_GID='1000'
export A_UID='1000'
export BPATH='/home/backups'
export CIMAP='/etc/dovecot'
export CSMTP='/etc/postfix'
export C_DNS='/etc/powerdns'
export C_SQL='/etc/mysql'
export C_SSL='/etc/ssl'
export C_WEB='/etc/nginx'
export DBMYS='/var/lib/mysql'
export DBSQL='/var/lib/sqlite'
export DHOST='localhost'
export DPORT='3306'
export DTYPE='mysql'
export OSMIR='archive.ubuntu.com'
export OSREL='disco'
export TAREA='Australia'
export TCITY='Sydney'
export VPATH='/home/u'
export V_PHP='7.3'

# Import managed aliases
[ -f ~/.sh/lib/aliases ] && source ~/.sh/lib/aliases

# Import default vhost
[[ -f ~/.vhosts/$VHOST ]] && source ~/.vhosts/$VHOST

# Import managed env vars
[ -f ~/.sh/lib/functions ] && source ~/.sh/lib/functions

# Local custom aliases and env var overrides
[ -f ~/.myrc ] && source ~/.myrc

PS1="\[\033[1;${COLOR}m\]${LABEL} \w\[\033[0m\] "

export PATH SUDO MAILTO EDITOR TERM DEBIAN_FRONTEND PS1
export AHOST AMAIL APASS C_FPM DNAME DPASS DPATH DUSER EPASS EXMYS EXSQL
export HNAME HDOMN IP4_0 MHOST MPATH SQCMD UPASS UPATH UUSER U_GID U_SHL
export U_UID VHOST VUSER WPASS WPATH WPUSR
