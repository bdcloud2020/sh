#!/usr/bin/env bash
# .sh/bin/shuser 20160130 - 20190828
# Copyright (C) 1995-2019 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 || $1 =~ '-h' ]] && echo "Usage: shuser uid*|all" && exit 1

source /root/.vhosts/$(hostname -f) || exit 3 # only needed for SQCMD
set -x
# FIXME should be dynamic
#ADMIN=sysadm
PWTBL=vmails

[[ $1 == all ]] && QRY="%" || QRY="%$1%"

RESULT=$(echo "
 SELECT count(*)
   FROM $PWTBL
  WHERE user LIKE '$QRY'" | $SQCMD)

if [[ $RESULT -gt 1 ]]; then

    echo "
 SELECT uid, user, home
   FROM $PWTBL
  WHERE user LIKE '$QRY'
  ORDER BY uid" | $SQCMD | \
    awk -F '[|\t]' '{printf "u%d  %-42s %s\n", $1, $2, $3}'

elif [[ $RESULT -eq 1 ]]; then

    EMAIL=$(echo "
 SELECT user
   FROM $PWTBL
  WHERE user LIKE '$QRY' LIMIT 1" | $SQCMD)

    echo "
 SELECT user, uid, home
   FROM $PWTBL
  WHERE user = '$EMAIL'" | $SQCMD | \
    awk -F '[|\t]' '{printf " user: %s\n uuid: u%s\n home: %s\n", $1, $2, $3}'

    echo "   pw: $(shpw $EMAIL)"
else
    echo "No matching users"
fi

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
