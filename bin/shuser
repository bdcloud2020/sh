#!/usr/bin/env bash
# .sh/bin/shuser 20160130 - 20190723
# Copyright (C) 1995-2019 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 || $1 =~ '-h' ]] && echo "Usage: shuser uid*|all" && exit 1

# FIXME should be dynamic
#ADMIN=sysadm
PWTBL=vmails

if [[ $DTYPE == sqlite ]]; then
    echo "Sorry, this script does not work with sqlite yet"
    exit 3
fi

[[ $1 == all ]] && QRY="%" || QRY="%$1%"

RESULT=$(mysql -BNe "
 SELECT count(*)
   FROM $ADMIN.$PWTBL
  WHERE user LIKE '$QRY'")

if [[ $RESULT -gt 1 ]]; then
    mysql -BNe "
 SELECT concat('u', uid),
        rpad(user,length(user)+(42-length(user)),' '),
        home
   FROM $ADMIN.$PWTBL
  WHERE user LIKE '$QRY'
  ORDER BY uid"
elif [[ $RESULT -eq 1 ]]; then
    mysql -Ee "
 SELECT user,
        uid,
        gid,
        quota,
        home
   FROM $ADMIN.$PWTBL
  WHERE user LIKE '$QRY'
  LIMIT 1" | tail -n +2
    echo "   pw: $(shpw $1)"
else
    echo "No matching users"
fi

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
