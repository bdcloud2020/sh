#!/usr/bin/env bash
# .sh/bin/chpw 20190603 - 20200329
# Copyright (C) 1995-2020 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $2 || $1 =~ '-h' ]] && echo "Usage: chpw user@domain pw" && exit 1

[[ $(id -u) -gt 0 ]] && echo "ERROR: must be root (use sudo -i)" && exit 2

source /root/.vhosts/$(hostname -f) || exit 3 # only needed for SQCMD

EMAIL=${1,,} # lowercase user@domain
shift
NEWPW=$@ # PW may contain spaces

if [[ -z $(echo "SELECT id FROM vmails WHERE user='$EMAIL'" | $SQCMD) ]]; then
    echo "ERROR: '$EMAIL' does not exist in vmails"
    exit 3
fi

if [[ ${#NEWPW} -gt 11 ]]; then
    if [[ $NEWPW =~ [A-Z] ]]; then
        if [[ $NEWPW =~ [a-z] ]]; then
            if [[ $NEWPW =~ [0-9] ]]; then
                # Bingo!
            else
                echo "Password must contain at least one numeral" && exit 4
            fi
        else
            echo "Password must contain at least one lowercase character" && exit 4
        fi
    else
        echo "Password must contain at least one uppercase character" && exit 4
    fi
else
    echo "Password must be at least 12 chars long" && exit 4
fi

CRYPT=$(doveadm pw -s SHA512-CRYPT -p "$NEWPW")
VHOST=${EMAIL#*@} # userid @ $VHOST
VCONF="/root/.vhosts/$VHOST.conf"

echo "UPDATE vmails SET password='$CRYPT',modified='$(date '+%Y-%m-%d %H:%M:%S')' WHERE user='$EMAIL'" | $SQCMD

if [[ -f $VCONF ]]; then
    grep -q $EMAIL $VCONF
    if [[ $? -eq 0 ]]; then
        echo "Old Password"
        grep -A1 "^Username: $EMAIL" $VCONF
        sed -i "/^Username: $EMAIL/{n;s/.*/Password: $NEWPW/}" $VCONF
    else
        cat << EOS | tee -a $VCONF
Mail
=========

Username: $EMAIL
Password: $NEWPW

EOS
    fi
    echo
    echo "New Password"
    grep -A1 "^Username: $EMAIL" $VCONF
else
    echo "ERROR: $VCONF does not exist"
fi

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
