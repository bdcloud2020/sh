#!/usr/bin/env bash
# .sh/bin/setup-all 20170519 - 20190630
# Copyright (C) 1995-2019 Mark Constable <markc@renta.net> (AGPL-3.0)

export PATH=/bin:/usr/bin:/sbin:/usr/sbin:/root/.sh/bin

[[ $1 =~ '-h' ]] && echo "Usage: setup-all [hostname.dom.ain] [(mysql)|sqlite] [distro($OSREL)] [mailto] [IP]" && exit 1

[[ $(id -u) -gt 0 ]] && echo "ERROR: must be root (use sudo -i)" && exit 2

echo "######## $0 $*"

source /root/.shrc || exit 3

VHOST=${1:-$(hostname -f|tr 'A-Z' 'a-z')}
DTYPE=${2:-$DTYPE}
OSREL=${3:-$OSREL}
USEIP=${5:-''}

[[ ! -d /root/.vhosts ]] && mkdir /root/.vhosts && chmod 700 /root/.vhosts

sethost sysadm@mail.$(echo $VHOST|sed 's/^mail\.//') $DTYPE $OSREL $USEIP
gethost > /root/.vhosts/$VHOST && chmod 600 /root/.vhosts/$VHOST

MAIL2=${4:-"admin@$VHOST"}

setup-host $VHOST $DTYPE $OSREL $USEIP
setup-deb
setup-db
setup-etc
setup-hcp

echo "##### Send message to: $MAIL2"
cat ~/.vhosts/$VHOST.conf | mail -s "Setup $VHOST - $(hostname -i)" -r $MAIL2 $MAIL2

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
