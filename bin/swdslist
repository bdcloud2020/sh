#!/usr/bin/php
<?php
// .sh/bin/swdslist 20180619 - 20191227
// Copyright (C) 1995-2019 Mark Constable <markc@renta.net> (AGPL-3.0)

if ($argc < 2 ) { exit("Usage: swdslist domain\n"); }

$api_id = getenv('SW_API_ID');
$api_key = getenv('SW_API_KEY');

try {
    $client = new SoapClient(
        null, [
            'location' => 'https://api.synergywholesale.com/?wsdl',
            'uri' => '',
            'trace' => 1,
        ]
    );

    $output = $client->DNSSECListDS([
        'resellerID' => $api_id,
        'apiKey' => $api_key,
        'domainName' => $argv[1],
    ]);

    if ($output->status == 'OK') {
        var_export($output->DSData);
    } else {
        print_r($output);
    }

} catch (SoapFault $fault) {
    print_r($fault);
}

//echo "\nREQUEST:\n" . $client->__getLastRequest() . "\n";
//echo "\nRESPONSE:\n" . $client->__getLastResponse() . "\n";
